<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="80dp">

    <TextView
        android:id="@+id/notas_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:visibility="invisible"
        android:drawableLeft="@drawable/ic_seta"
        android:fontFamily="sans-serif-black"
        />

    <TextView
        android:id="@+id/notas_id1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:drawableLeft="@drawable/ic_seta"
        android:fontFamily="sans-serif-black"
        />



    <TextView
        android:id="@+id/notas_viewholder_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_margin"
        android:layout_toRightOf="@+id/notas_id"
        android:layout_marginVertical="10dp"
        android:fontFamily="sans-serif-black"
        android:text="ete"
        android:textColor="@color/black"
        android:textSize="@dimen/tam_titulo"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/notas_viewholder_descricao"
        android:text="333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/notas_id"
        android:layout_below="@+id/notas_viewholder_titulo"
        android:textSize="@dimen/tam_descricao"
        android:fontFamily="sans-serif"/>

</RelativeLayout>