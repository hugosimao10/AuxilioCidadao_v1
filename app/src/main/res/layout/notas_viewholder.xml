<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/notas_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:drawableLeft="@drawable/ic_nota_old"
        android:fontFamily="sans-serif-black" />

    <TextView
        android:id="@+id/notas_viewholder_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginTop="@dimen/text_margin"
        android:layout_marginEnd="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
        android:layout_marginBottom="@dimen/text_margin"
        android:layout_toRightOf="@+id/notas_id"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="ete"
        android:fontFamily="sans-serif-black" />

    <TextView
        android:id="@+id/notas_viewholder_descricao"
        android:text="333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notas_id"
        android:layout_margin="@dimen/text_margin"
        android:fontFamily="sans-serif"/>

</RelativeLayout>